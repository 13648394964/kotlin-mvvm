<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_title_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/color_white">

    <TextView
        android:id="@+id/title_bar_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_text_333"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="返回" />

    <ImageView
        android:id="@+id/title_bar_left_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_bar_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:textColor="@color/color_text_333"
        android:textSize="16sp"
        tools:text="标题" />

    <ImageView
        android:id="@+id/title_bar_right_image2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/title_bar_right_image"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/title_bar_right_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_bar_right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_text_333"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="编辑" />

    <View
        android:id="@+id/title_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e1e1e1"
        android:visibility="gone" />
</RelativeLayout>